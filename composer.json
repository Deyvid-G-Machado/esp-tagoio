{
    "name": "deyvid/esp-tagoio",
    "description": "Projeto PHP que conecta ESP com TagoIO",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "echo 'Instalação concluída com sucesso!'"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
